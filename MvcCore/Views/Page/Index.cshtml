@using Humanizer
@model IndexPageViewModel

@{ ViewData["Title"] = "Home Page"; }




<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <a asp-action="Create" class="btn btn-success mb-3">Create</a>
            <div class="list-group" id="list-tab" role="tablist">
                @foreach (var Page in Model.pages)
                {
                    <a class="list-group-item list-group-item-action" id="list-@Page.ID-list" data-toggle="list" href="#list-@Page.ID" role="tab">@Page.Title</a>
                }
            </div>           
        </div>
        
        <div class="col-7">
@*            <div class="col-7">

            </div>*@
            
            <div class="tab-content" id="nav-tabContent">
                @foreach (var Page in Model.pages)
                {
                    <div class="tab-pane fade show" id="list-@Page.ID" role="tabpanel" aria-labelledby="list-@Page.ID-list">                     
                      
                        <!-- Modal -->
                        <div class="modal fade" id="DeleteModal-@Page.ID" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete the page?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a asp-action="Delete" asp-route-ID="@Page.ID" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!---->
                      <div class="float-right" id="list-@Page.ID" role="tabpanel" aria-labelledby="list-@Page.ID-list">

                        <h2>Actions</h2>
                        <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-ID="@Page.ID">
                            Edit Page
                        </a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteModal-@Page.ID">
                            Delete Page
                        </button>

                        <br />
                        <br />

                        <h2>Information</h2>
                            
                        <p><strong>Created at: </strong>@Page.created_at.AddHours(-1).Humanize()</p>
                        <p><strong>Updated at: </strong>@Page.updated_at.AddHours(-1).Humanize()</p>
                            
                        </div>
                        <h1>@Page.Title</h1>
                        <br />
                        <p>@Page.Text</p>
                        
                     </div>
                }
                </div>
            </div>
       


    
